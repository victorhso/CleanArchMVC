@model CleanArchMVC.WebUI.ViewModels.LoginViewModel

<h2>LogIn</h2>

<div class="row">
    <div class="col-md-10">

        <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">

            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="All" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="DS_EMAIL" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DS_EMAIL" class="form-control" />
                    <span asp-validation-for="DS_EMAIL" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <label asp-for="DS_PASSWORD" class="col-md-2 control-label"></label>

                <div class="col-md-10">
                    <input asp-for="DS_PASSWORD" class="form-control" />
                    <span asp-validation-for="DS_PASSWORD" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-outline-dark">Login</button>
                </div>
            </div>

            <p>
                <a asp-action="Register">Registre-se como um novo usuário?</a>
            </p>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
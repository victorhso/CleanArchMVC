@model CleanArchMVC.WebUI.ViewModels.RegisterViewModel

<h3>Registrar Usuário</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DS_EMAIL"></label>
                <input asp-for="DS_EMAIL" class="form-control" />
                <span asp-validation-for="DS_EMAIL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DS_PASSWORD"></label>
                <input asp-for="DS_PASSWORD" class="form-control" />
                <span asp-validation-for="DS_PASSWORD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-dark">Registrar</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Retornar</a>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
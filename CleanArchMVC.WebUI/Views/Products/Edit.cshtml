@model CleanArchMVC.Application.DTOs.ProductDTO

<h3>Editar Produto</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DS_NAME" class="control-label"></label>
                <input asp-for="DS_NAME" class="form-control" />
                <span asp-validation-for="DS_NAME" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DS_DESCRIPTION" class="control-label"></label>
                <input asp-for="DS_DESCRIPTION" class="form-control" />
                <span asp-validation-for="DS_DESCRIPTION" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DS_IMAGE" class="control-label"></label>
                <input asp-for="DS_IMAGE" class="form-control" />
                <span asp-validation-for="DS_IMAGE" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VL_PRICE" class="control-label"></label>
                <input asp-for="VL_PRICE" asp-format="{0:N2}" class="form-control" />
                <span asp-validation-for="VL_PRICE" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QTY_STOCK" class="control-label"></label>
                <input asp-for="QTY_STOCK" class="form-control" />
                <span asp-validation-for="QTY_STOCK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ID_CATEGORY" class="control-label"></label>
                <select asp-for="ID_CATEGORY" class="form-control" asp-items="ViewBag.ID"></select>
                <span asp-validation-for="ID_CATEGORY" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>
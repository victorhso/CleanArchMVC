@model CleanArchMVC.Application.DTOs.ProductDTO

<h2>Register new Product</h2>

<form asp-action="Create">

    <div class="form-horizontal">

        <hr />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="DS_NAME" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DS_NAME" class="form-control" />
                <span asp-validation-for="DS_NAME" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DS_DESCRIPTION" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DS_DESCRIPTION" class="form-control" />
                <span asp-validation-for="DS_DESCRIPTION" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DS_IMAGE" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DS_IMAGE" class="form-control" />
                <span asp-validation-for="DS_IMAGE" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="VL_PRICE" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="VL_PRICE" class="form-control" />
                <span asp-validation-for="VL_PRICE" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="QTY_STOCK" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QTY_STOCK" class="form-control" />
                <span asp-validation-for="QTY_STOCK" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="ID_CATEGORY" class="col-md-2 control-label"></label>
            <div class="col-md-10">
               <select asp-for="ID_CATEGORY" class="form-control" asp-items="ViewBag.ID"> </select>                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</form>